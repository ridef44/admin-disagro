<div class="block mx-auto my-10 p-8 bg-white w-1/3 border border-gray-300 rounded-lg shadow-lg relative">
  <button onclick="window.history.back();" class="absolute top-4 right-4 text-gray-500 hover:text-amber-500 focus:outline-none">
    <i class="mr-4" data-feather="arrow-left"></i> Regresar
  </button>

  <h1 class="text-2xl py-2 font-bold text-center text-gray-700">
    Editar Producto
  </h1>

  <form id="" action="" method="POST" class="mt-6 space-y-4">
    <input type="hidden" name="id" value="{{producto.id}}">

    <div class="w-full">
      <label class="block text-gray-700 text-sm font-medium mb-1" for="tipo">
        Tipo
      </label>
      <select name="type" class="bg-white border border-gray-300 w-full text-sm placeholder-gray-500 p-3 focus:ring-2 focus:ring-amber-500 focus:border-amber-500 rounded-md shadow-sm" disabled>
        <option value="">Seleccione un tipo</option>
        <option value="producto" {{#ifEquals producto.type "producto"}}selected{{/ifEquals}}>Producto</option>
        <option value="servicio" {{#ifEquals producto.type "servicio"}}selected{{/ifEquals}}>Servicio</option>
      </select>
    </div>

    <div class="w-full">
      <label class="block text-gray-700 text-sm font-medium mb-1" for="nombre">
        Nombre
      </label>
      <input
        oninvalid="this.setCustomValidity('Ingrese el campo')"
        oninput="setCustomValidity('')"
        class="bg-white border border-gray-300 w-full text-sm placeholder-gray-500 p-3 focus:ring-2 focus:ring-amber-500 focus:border-amber-500 rounded-md shadow-sm"
        type="text" name="name" placeholder="Nombre" id="nombre" value="{{producto.name}}" required disabled>
    </div>

    <div class="w-full">
      <label class="block text-gray-700 text-sm font-medium mb-1" for="precio">
        Precio Q.
      </label>
      <input
        class="bg-white border border-gray-300 w-full text-sm placeholder-gray-500 p-3 focus:ring-2 focus:ring-amber-500 focus:border-amber-500 rounded-md shadow-sm"
        oninvalid="this.setCustomValidity('Ingrese un precio vÃ¡lido')"
        oninput="setCustomValidity('')"
        type="number" step="0.01" name="price" placeholder="Precio" id="precio" value="{{producto.price}}" required disabled>
    </div>

    {{#if error}}
    <p class="text-center text-red-500 text-sm">{{error}}</p>
    {{/if}}

    <div class="flex justify-center">
      <a href="/productos" class="flex text-xl me-8 bg-amber-500 hover:bg-amber-800 text-white font-semibold py-2 px-4 rounded-md">
        <i class="mr-6" data-feather="arrow-left-circle"></i>
        Regresar
      </a>
    </div>
  </form>
</div>
